<h1>投稿</h1>
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>
<p>投稿者: <%= @blog.user.name %></p>

<p id="notice"><%= notice %></p>
<div class="favorites_blogs">
<p>
  <%= image_tag @blog.image.url if @blog.image.present?%>
</p>
<% if @blog.user_id == current_user.id %>
  <%= link_to '編集', edit_blog_path(@blog) %>
  <%= link_to '削除', blog_path(@blog), method: :delete ,data: { confirm: 'ガチで消すんすか？' }%>
<% end %>
<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入り', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p><%= link_to "一覧画面に戻る", blogs_path %></p>
</div>
