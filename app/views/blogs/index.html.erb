<h1>一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "投稿を編集する", edit_blog_path(blog.id), data: {confirm: '編集するんすか？' } %></td>
    <td><%= link_to '投稿を削除する', blog_path(blog.id), method: :delete ,data { confirm: 'ガチで消すんすか？' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新規投稿', new_blog_path %>
