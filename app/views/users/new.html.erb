<h1>ふぇーすぶっく</h1>
<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %>件のエラーにより、 <%= @user.name %> が登録出来ませんでした。</h2>
		<ul>
		<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	</div>
<% end %>
<%= form_with(model: @user, local: true ) do |f| %>
<ul class="users_form_ul" style="list-style-type: none;" >
  <li>
    <%= f.label "Name：" %><br>
    <%= f.text_field :name %><br>
  </li>
  <li>
    <%= f.label "Email address：" %><br>
    <%= f.text_field :email %><br>
  </li>
  <li>
    <%= f.label "Password："  %><br>
    <%= f.password_field :password %><br><br>
  </li>
  <li>
    <%= f.submit "Create account" %>
  </li>
</ul>
<% end %>
